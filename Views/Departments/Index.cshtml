@model IEnumerable<BackendModules.Models.Department>

<h1>Departments</h1>

<table class="table">
    <thead>
        <tr>
            <th>Name</th>
            <th>Logo</th>
            <th>Sub-Departments</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var department in Model)
        {
            <tr>
                <td>@department.Name</td>
                <td><img src="@department.Logo" alt="@department.Name Logo" width="50"></td>
                <td>
                    <ul>
                        @foreach (var sub in department.SubDepartments)
                        {
                            <li>@sub.Name</li>
                        }
                    </ul>
                </td>
                <td>
                    <a href="@Url.Action("Details", new { id = department.Id })">Details</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<a href="@Url.Action("Create")" class="btn btn-primary">Create New Department</a>
